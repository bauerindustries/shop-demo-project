<%- include('../../shared/includes/head', {pageTitle: 'Add product'}) %> 
<link rel="stylesheet" href="/styles/forms.css">
<%- include('../../shared/includes/head-end') %>
<body>
  <%- include('../../shared/includes/header') %>
  <main>
    <h1>Add Product</h1>
    <section>
      <!-- enctype set as form data will contain image/file, plus CSRF token added as query string parameter -->
      <form action="/admin/products/new?_csrf=<%= locals.csrfToken %> " method="POST" enctype="multipart/form-data">
        <p>
          <label for="title">Title</label>
          <input type="text" id="title" name="title" required />
        </p>
        <p>
          <label for="image">Image</label>
          <input
            type="file"
            id="image"
            name="image"
            required
            accept="image/png, image/jpg"
          />
        </p>
        <p>
          <label for="summary">Summary</label>
          <input
            type="text"
            id="summary"
            name="summary"
            required
            maxlength="255"
          />
        </p>
        <p>
          <label for="price">Price</label>
          <input
            type="number"
            id="price"
            name="price"
            required
            min="0.01"
            step="0.01"
          />
        </p>
        <p>
          <label for="description">Description</label>
          <textarea
            type="textarea"
            id="description"
            name="description"
            rows="7"
            required
          ></textarea>
        </p>
        <p>
          <button type="reset" class="btn btn-alt">Clear</button>
          <button type="submit" class="btn">Save</button>
        </p>
      </form>
    </section>
  </main>

  <%- include('../../shared/includes/footer') %>
</body>
