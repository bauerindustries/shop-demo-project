<%- include('../../shared/includes/head', {pageTitle: 'All products'}) %>
<link rel="stylesheet" href="/styles/products.css" />
<script src="/scripts/product-management.js" defer></script>
<%- include('../../shared/includes/head-end') %>
<body>
  <%- include('../../shared/includes/header') %>
  <main>
    <h1>Product Administration</h1>
    <section>
      <p><a href="/admin/products/new" class="btn btn-add">Add product</a></p>
    </section>

    <section>
      <ul id="product-grid">
        <% for( const product of products ) { %>
        <li>
          <%- include('../../shared/includes/product-item', {product: product})
          %>
        </li>
        <% } %>
      </ul>
    </section>
  </main>
  <%- include('../../shared/includes/footer') %>
</body>
