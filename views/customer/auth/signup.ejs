<%- include('../../shared/includes/head', {pageTitle: 'signUp'}) %>
    <link rel="stylesheet" href="/styles/forms.css">
    <link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main>
    <h1>Create new account</h1>
    <form action="/signup" method="POST">
      <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
      <% if (inputData.errorMessage) { %>
       <section class="alert">
        <h2>Invalid input</h2>
        <p><%= inputData.errorMessage %></p>
      </section>
      <% } %>
      <p>
        <label for="email">Email</label>
        <input type="email" name="email" id="email" value="<%= inputData.email %>" required />
      </p>

      <p>
        <label for="confirm-email">Confirm Email</label>
        <input type="email" name="confirm-email" id="confirm-email" value="<%= inputData.confirmEmail %>" required />
      </p>

      <p>
        <label for="password">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          minlength="6"
          required
          value="<%= inputData.password %>"
        />
      </p>
      <hr />
      <p>
        <label for="fullname">Full Name</label>
        <input type="text" name="fullname" id="fullname" value="<%= inputData.fullname %>" required />
      </p>
      <p>
        <label for="street">Street</label>
        <input type="text" name="street" id="street" value="<%= inputData.street %>" required />
      </p>
      <p>
        <label for="city">City</label>
        <input type="text" name="city" id="city" value="<%= inputData.city %>" required />
      </p>
      <p>
        <label for="postcode">Postcode</label>
        <input
          type="text"
          name="postcode"
          id="postcode"
          required
          minlength="6"
          maxlength="10"
          value="<%= inputData.postcode %>"
        />
      </p>
      <p><button class="btn">Create Account</button></p>
      <p><a id="switch-form" href="/login">Login instead</a></p>
    </form>
  </main>

  <%- include('../../shared/includes/footer') %>
</body>
